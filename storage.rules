rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Images de profil
    match /profile_images/{userId}.jpg {
      // L'utilisateur peut lire et écrire sa propre image
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Images de produits - lecture publique
    match /product_images/{imageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Images de catégories - lecture publique
    match /category_images/{imageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
